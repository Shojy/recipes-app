<!DOCTYPE html>
<html>
<head>
  <title>Recipes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-full navbar-light bg-faded">
    <div class="container">
      <%= link_to "Recipes", root_path, class: "navbar-brand" %>

      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to "All Recipes", root_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Add New Recipe", new_recipe_path, class: "nav-link" %>
          </li>
          <li class="nav-item pull-xs-right">
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link pull-right" %>
          </li>
          <li class="nav-item pull-xs-right">
            <span class="nav-link">Hi <%= current_user.login %>!</span>
          </li>
        <% else %>

          <li class="nav-item pull-xs-right">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item pull-xs-right">
            <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

<div class="container" style="margin-top: 20px;">
<% flash.each do |name, msg| %>
<div class="alert alert-<%= name %> alert-dismissible fade in" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= msg %>
</div>
<% end %>

<%= yield %>
</div>

</body>
</html>
